<%#= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |form| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-7">
          <%= form.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :password %>
        </div>
        <div class="col-sm-7">
          <%= form.password_field :password, class: "form-control", autocomplete: "off"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit "Log in", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <div class="col-xs-4 col-xs-offset-2">
      [ <%= link_to "Go back", root_path %> ]
    </div>
  </div>
</div>