<%= render 'shared/errors', obj: @article %>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |form| %>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :title %>
    </div>
    <div class="col-sm-7">
      <%= form.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :description %></br>
    </div>
    <div class="col-sm-7">
      <%= form.text_area :description, rows: 10, class: "form-control", placeholder: "Enter the Description", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <%= cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= form.submit 'Post Article', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="col-xs-4 col-xs-offset-2">
  [ <%= link_to "Go back to Article list", articles_path %> ]
</div>