<%= render 'shared/errors', obj: @user %>

<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |form| %>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :username %>
    </div>
    <div class="col-sm-7">
      <%= form.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :email %>
    </div>
    <div class="col-sm-7">
      <%= form.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :password %></br>
    </div>
    <div class="col-sm-7">
      <%= form.password_field :password, class: "form-control", placeholder: "Password", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit (@user.new_record? ? "Sign up" : "Update Account"), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="col-xs-4 col-xs-offset-2">
  [ <%= link_to "Go back", root_path %> ]
</div>