<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |form| %>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :name %>
    </div>
    <div class="col-sm-7">
      <%= form.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Create Category', class: 'btn btn-primary' %>
  </div>
  </div>
<% end %>

<div class="col-xs-4 col-xs-offset-2">
  [ <%= link_to "Go back", categories_path %> ]
</div>