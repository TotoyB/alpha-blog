<h1 align="center"> List of Categories </h1>
<div align="center">
  <%= will_paginate @category %>
  <% @category.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <div align="center">
            <li style="font-size: x-large"> <%= category.name %> </li><br>
            <% if logged_in? && current_user.admin? %>
              <%= link_to "Edit Category", edit_category_path(category), class: "btn btn-primary"%>
            <% end %>
          </div>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate @category %>
</div>